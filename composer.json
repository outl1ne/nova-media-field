{
  "name": "optimistdigital/nova-media-field",
  "description": "Laravel Nova field for image/gallery upload and library browsing.",
  "keywords": [
    "laravel",
    "nova",
    "optimistdigital",
    "media"
  ],
  "authors": [
    {
      "name": "Marttin Notta",
      "email": "marttinnotta@optimistdigital.com",
      "role": "Developer"
    },
    {
      "name": "Optimist Digital",
      "email": "info@optimistdigital.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.1.0",
    "intervention/image": "^2.4",
    "laravel/nova": "^2.0.11 || ^3.0",
    "php-ffmpeg/php-ffmpeg": "^0.17.0",
    "guzzlehttp/guzzle": "^7.3.0"
  },
  "autoload": {
    "psr-4": {
      "OptimistDigital\\MediaField\\": [
        "src/"
      ]
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OptimistDigital\\MediaField\\FieldServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
